<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Contact.Maui.ViewModels"
             x:DataType="vm:ContactViewModel"
             x:Class="Contact.Maui.Views.TestPage"
             Title="TestPage">


    <VerticalStackLayout Spacing="10" Margin="20,20,0,0">

        <Entry Placeholder="Name" Text="{Binding Contact.Name}" />
        <Entry Placeholder="Email" Text="{Binding Contact.Email}" />
        <Entry Placeholder="Phone" Text="{Binding Contact.Phone}" />
        <Entry Placeholder="Address" Text="{Binding Contact.Address}" />

        <Button Text="Save" />

    </VerticalStackLayout>
    

</ContentPage>